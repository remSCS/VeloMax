                                <Button Margin="5,0" Padding="5" Content="Modifier"
                                Foreground="White" Background="#a7a7a7">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="10"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="true">
                                                    <Setter Property="Background" Value="Black"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Button Margin="5,0" Padding="5" Content="Supprimer"
